{
    "root": true,
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:prettier/recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "prettier/prettier": [
                    "error",
                    {
                        "trailingComma": "all",
                        "printWidth": 120,
                        "tabWidth": 2,
                        "useTabs": false
                    }
                ]
            }
        }
    ]
}
